{
  "name": "mcp-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": ["client", "server"],
    "nohoist": [
      "**/vite",
      "**/vite/**",
      "**/@vitejs/plugin-react",
      "**/@vitejs/plugin-react/**"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist dist-esm",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:health\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev:health": "cd server && python main.py",
    "build:all": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "lint": "eslint .",
    "preview": "cd client && npm run preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:obsidian": "npm run build && node test-obsidian.js",
    "cli": "tsx server/src/cli.ts",
    "stop": "kill-port 3000 5173 8000 && pkill -f 'python main.py' || echo 'No processes to stop'"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mantine/code-highlight": "^8.1.0",
    "@mantine/core": "^8.0.1",
    "@mantine/dates": "^8.0.1",
    "@mantine/emotion": "^8.0.1",
    "@mantine/hooks": "^8.0.1",
    "@mantine/notifications": "^8.0.1",
    "@tabler/icons-react": "^3.33.0",
    "@tanstack/react-query": "^5.77.2",
    "@tanstack/react-query-devtools": "^5.77.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.15.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "@tensorflow/tfjs-node": "^4.22.0",
    "@xenova/transformers": "^2.17.2",
    "express": "^4.21.2",
    "node-ical": "^0.20.1",
    "node-mac": "^1.0.1",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "fs-extra": "^11.3.0",
    "openai": "^4.103.0",
    "zod": "^3.25.28",
    "@vitejs/plugin-react": "^4.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.2.0",
    "tsx": "^4.19.4",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "sass": "^1.89.2",
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10",
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1",
    "ts-node": "^10.9.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/highlight.js": "^9.12.4",
    "@types/node": "^20.11.0",
    "@types/nodemon": "^1.19.6",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-dropzone": "^4.2.2",
    "@types/recharts": "^1.8.29",
    "chalk": "^4.1.2",
    "chrono-node": "^2.8.2",
    "commander": "^11.1.0",
    "date-fns": "^4.1.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.0.0",
    "history": "^5.3.0",
    "playwright": "^1.52.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0"
  },
  "main": "dist/index.js",
  "bin": {
    "obsidian-cli": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
